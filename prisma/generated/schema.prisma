enum Role {
  user
  system
  assistant
  tool
}

model Message {
  id           String   @id @default(uuid())
  role         Role     @default(user)
  tool_calls   String? // Como o SQLite n√£o suporta array nativamente, a gente vai contornar com um JSON.stringify aqui
  tool_call_id String?
  content      String
  chatId       String   @default(uuid())
  createdAt    DateTime @default(now())
}

model Product {
  id           String    @id @default(uuid())
  name         String
  price        Float
  description  String
  isHighlights Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  removedAt    DateTime?
}

