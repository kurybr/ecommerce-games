enum Role {
  user
  system
  assistant
}

model Message {
  id        String   @id @default(uuid())
  role      Role     @default(user)
  message   String
  chatId    String   @default(uuid())
  createdAt DateTime @default(now())
}

model Product {
  id           String    @id @default(uuid())
  name         String
  price        Float
  description  String
  isHighlights Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  removedAt    DateTime?
}

